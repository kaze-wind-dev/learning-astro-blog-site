---
import Layout from "../../layout/Layout.astro";
import { getAllBlogList, getBlogDetail } from "../../libs/api/microcms";

export async function getStaticPaths() {
  const blogList = await getAllBlogList({
    fields: ["id"],
  });
  return blogList.map((blog) => ({
    params: {
      id: blog.id,
    },
  }));
}
const { id } = Astro.params;
if(!id) {
  return Astro.redirect("/404");
}

const blog = await getBlogDetail(id);
const pageTitle = blog.title;

---

<Layout pageTitle={pageTitle}>
  <main>
    <article class="c-post-detail">
      <h1 class="title">{blog.title}</h1>
      <p class="publishedAt">公開日時：{blog.publishedAt}</p>
      <div class="post" set:html={blog.content} />
    </article>
    <ul class=""></ul>
  </main>
</Layout>
