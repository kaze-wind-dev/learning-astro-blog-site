---
import Layout from "../../layout/Layout.astro";
import { getBlogList, getBlogDetail } from "../../libs/api/microcms";
import BlogList from "../../components/BlogList.astro";

export async function getStaticPaths() {
  const blogList = await getBlogList();
  return blogList.contents.map((blog) => ({
    params: {
      id: blog.id,
    },
  }));
}

const { id } = Astro.params;
const blog = await getBlogDetail(id);
const pageTitle = "ブログ一覧";
---

<Layout pageTitle={pageTitle}>
  <main>
    <article class="c-post-detail">
      <h1 class="title">{blog.title}</h1>
      <p class="publishedAt">公開日時：{blog.publishedAt}</p>
      <div class="post" set:html={blog.content} />
    </article>
    <ul class=""></ul>
  </main>
</Layout>
